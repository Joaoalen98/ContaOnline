@model IEnumerable<ContaOnline.Domain.Models.ContaCorrente>

@{
    ViewBag.Title = "Inicio";
}

<h2>Inicio</h2>

<p>
    <a href='@Url.Action("Incluir")'>Novo</a>
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td style="width: 1%; white-space: nowrap;">
                <a href='@Url.Action("Alterar", new { Id = item.Id })'>Alterar</a> |
                <a href='@Url.Action("Excluir", new { Id = item.Id })'>Excluir</a>
            </td>
        </tr>
    }
</table>